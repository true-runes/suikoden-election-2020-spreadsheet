  "compilerOptions": {
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["sample/*.ts", "tmp/*.ts", "dist/*.ts"]
}
